<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/light_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Select Optimization Type"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:gravity="left"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/light_white"/>


    <TextView
        android:text="@string/From_current_location"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:id="@+id/from_my_location"
        android:gravity="left"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/light_white"/>
    <TextView
        android:text="@string/Keep_Start"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:gravity="left"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:id="@+id/keep_start"
        android:textSize="16sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/light_white"/>

    <TextView
        android:text="@string/Keep_Start_And_End"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="left"
        android:gravity="left"
        android:textColor="@color/black"
        android:id="@+id/keep_start_and_end"
        android:textSize="16sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/light_white"/>

    <Button
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:id="@+id/close_optimize_type"
        android:background="@color/red"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:text="Close"/>



</LinearLayout>